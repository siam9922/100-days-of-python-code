#Mathamatical operators
print(123 + 456)
print(7 - 3)
print(3 * 2)
print(type(6/3)) #Gives floating number
print(type(6//3)) #Gives a whole number (int)
print(2**2)  #Exponents

#BEDMAS
# ()
# **
# * OR /
# + OR -

#Task 1: What is the output of this code?
print(3 * 3 + 3/3 -3)

#Task 2: Change the code so it outputs 3?
print(3 * 3 + 3/3 -3)
print(3 * (3 + 3)/3 -3)



